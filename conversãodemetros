n1 = float(input("Digite uma distância em metros:"))
km = n1 / 1000
hm = n1 / 100
dam = n1 / 10
mt = n1
dcm = n1 * 10
cm = n1 * 100
mm = n1 * 1000
print("O Valor de {} metros convertido em: \n kilometros é {:.2f} \n Hectometros é {:.2f} \n Decâmetros {:.2f}  \n"
      " Metros é {:.2f}, \n Decímetro é {:.2f} \n Centímetros é {:.2f} \n Milímetros é {:.2f}".format(n1, km, hm, dam,
       mt, dcm, cm, mm))
